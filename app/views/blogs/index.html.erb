<p id="notice"><%= notice %></p>

<div class="toppage">
<h1 class="top">アウトプットカレンダー</h1>
<br>

<div class="row">
<div class="col-md-4">
  <div><%= link_to "アウトプットした内容を見る", outputs_path %></div><br>
	<div class="schedule">今後の予定一覧</div>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th>タイトル</th>
      <th>日程</th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title , blog %></td>
        <td><%= blog.start_time.strftime("%m-%d") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<br>
<div class="col-md-8">
<%= month_calendar events: @blogs do |date, blogs| %>
  <%= date.day %>
  

  <% blogs.each do |blog| %>
    <div>
      <%= link_to blog.title, blog %>
    </div>
  <% end %>
  
<% end %>
</div>
</div>
</div>